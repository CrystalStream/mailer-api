{
  "name": "generator-api",
  "version": "0.1.0",
  "description": "",
  "license": "GTFO",
  "author": "Altamir Consulting, LLC",
  "main": "server.js",
  "scripts": {
    "start": "npm run serve",
    "docker:dev": "docker-compose -f docker-compose.development.yml up",
    "docker:test": "docker-compose -f docker-compose.test.yml up",
    "build": "tsc",
    "dev": "nodemon -r ./src/server.ts --exec ts-node -e ts --trace-sync-io",
    "nova": "node ./nova/bin/run",
    "serve": "npm run build && node dist/server.js",
    "test": "LOG_LEVEL=error npm run test:unit",
    "test:unit": "nyc --reporter=text mocha -r ts-node/register 'src/**/*.spec.ts' --exit",
    "create:entity": "gulp entity --name"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts",
      "src/config/logger/*"
    ],
    "require": [
      "ts-node/register"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov"
    ],
    "report-dir": "./reports",
    "all": true
  },
  "dependencies": {
    "apollo-server-express": "^2.3.1",
    "bcrypt": "^3.0.3",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "class-validator": "^0.9.1",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "cron": "^1.6.0",
    "dotenv": "^6.2.0",
    "errorhandler": "^1.5.0",
    "express": "^4.16.4",
    "graphql": "^14.1.1",
    "graphql-tools": "^4.0.3",
    "helmet": "^3.15.0",
    "jsonwebtoken": "^8.4.0",
    "lodash": "^4.17.11",
    "mailgun-js": "^0.22.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.8.0",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.2.11",
    "validator": "^10.11.0",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@altamir/standards-tsconfig": "^1.0.3",
    "@altamir/standards-tslint": "^1.0.4",
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.1.7",
    "@types/chai-uuid": "^1.0.0",
    "@types/express": "^4.16.0",
    "@types/graphql": "^14.0.5",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mocha": "^5.2.5",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.12.18",
    "@types/passport": "^1.0.0",
    "@types/uuid": "^3.4.4",
    "chai": "^4.2.0",
    "chai-uuid": "^1.0.6",
    "gulp": "^4.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-template": "^5.0.0",
    "js-yaml": "^3.12.1",
    "minimist": "^1.2.0",
    "mocha": "^5.2.0",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0",
    "ts-node": "^7.0.1",
    "typescript": "^3.2.2",
    "walk": "^2.3.14"
  }
}
