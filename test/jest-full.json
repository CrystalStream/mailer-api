{
    "moduleFileExtensions": ["js", "json", "ts"],
    "rootDir": "../",
    "testEnvironment": "node",
    "testRegex": ".spec(.e2e)?.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
        "src/**/*.ts",
        "!src/**/*.spec.ts",
        "!src/api/migrations/**",
        "!**/node_modules/**"
    ],
    "coverageDirectory": "../coverage",
    "coverageReporters": [
        "json",
        "lcov",
        "text",
        "text-summary"
    ]
}
